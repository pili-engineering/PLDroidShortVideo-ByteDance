<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="ItemView">
        <attr name="text" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="src" format="reference" />
        <attr name="title" format="string" />
        <attr name="desc" format="string" />
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="activeLineColor" format="color" />
        <attr name="inactiveLineColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="delayShowText" format="integer" />
        <attr name="textPadding" format="dimension" />
        <attr name="animationTime" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="textHeight" format="dimension" />
        <attr name="progress" format="float" />
    </declare-styleable>
</resources>
